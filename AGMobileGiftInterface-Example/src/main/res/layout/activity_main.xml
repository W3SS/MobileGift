<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/physics_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF00">
    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Start" />

    <Button
        android:id="@+id/revert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="revert" />

    <Button
        android:id="@+id/showRabbit"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="show rabbit" />

    <Button
        android:id="@+id/showLadyBug"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/showRabbit"
        android:layout_below="@+id/showRabbit"
        android:text="show lady-bug" />

    <Button
        android:id="@+id/showFox"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/showLadyBug"
        android:layout_below="@+id/showLadyBug"
        android:text="show fox" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_below="@+id/showFox"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="33dp"
        android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/start"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="16dp"
            android:text="Enable physics" />




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/liner"
        android:layout_marginTop="11dp"
        android:background="#000000">

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="301dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek_bar"
            android:text="text" />

        <Button
            android:id="@+id/disable_physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/enable_physics"
            android:layout_below="@+id/enable_physics"
            android:layout_marginTop="10dp"
            android:text="disable physics" />

        <Button
            android:id="@+id/enable_physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="enable physics" />


    </RelativeLayout>

</RelativeLayout>
