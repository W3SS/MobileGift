<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/secondActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/usersRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"/>


        <LinearLayout
            android:id="@+id/layoutMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usersRv"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <include layout="@layout/layout_from"/>

            <include layout="@layout/horizontal_divider"/>

            <include layout="@layout/layout_to"/>

            <include layout="@layout/horizontal_divider"/>

            <include layout="@layout/layout_time"/>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/hscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutMenu"
            android:layout_marginTop="@dimen/down_menu_horizontal_scroll_view_margin_top"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_marginTop="3dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/down_menu_margin_left"
                    android:innerRadius="@dimen/card_view_inner_radius"
                    app:cardCornerRadius="@dimen/card_view_card_corner_radius"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"

                    app:cardPreventCornerOverlap="true"
                    >

                    <RelativeLayout
                        android:id="@+id/layoutLuggage"
                        android:layout_width="@dimen/down_menu_width"
                        android:layout_height="@dimen/down_menu_height">

                        <ImageView
                            android:id="@+id/luggageImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/luggage"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/luggageImage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/down_menu_image_name_margin_top"
                            android:text="luggage"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/down_menu_margin_left"
                    android:innerRadius="@dimen/card_view_inner_radius"
                    app:cardCornerRadius="@dimen/card_view_card_corner_radius"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"

                    app:cardPreventCornerOverlap="true"
                    >

                    <RelativeLayout
                        android:id="@+id/layoutPets"
                        android:layout_width="@dimen/down_menu_width"
                        android:layout_height="@dimen/down_menu_height"
                        >

                        <ImageView
                            android:id="@+id/petsImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/pets"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/petsImage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/down_menu_image_name_margin_top"
                            android:text="Pets"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/down_menu_margin_left"
                    android:innerRadius="@dimen/card_view_inner_radius"
                    app:cardCornerRadius="@dimen/card_view_card_corner_radius"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"

                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="@dimen/down_menu_width"
                        android:layout_height="@dimen/down_menu_height">

                        <ImageView
                            android:id="@+id/wheelchair_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/wheelchair"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/wheelchair_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/down_menu_image_name_margin_top"
                            android:text="Wheelchair"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/down_menu_margin_left"
                    android:innerRadius="@dimen/card_view_inner_radius"
                    app:cardCornerRadius="@dimen/card_view_card_corner_radius"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"

                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="@dimen/down_menu_width"
                        android:layout_height="@dimen/down_menu_height">

                        <ImageView
                            android:id="@+id/babyCarSeatImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/baby_seat"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/babyCarSeatImage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/down_menu_image_name_margin_top"
                            android:text="Baby car seat"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>


        <android.support.v7.widget.AppCompatButton
            style="@style/PriceButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/hscroll"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:innerRadius="@dimen/card_view_inner_radius"
            android:text="qweqweqwe"/>

    </RelativeLayout>
</ScrollView>